<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtContactName"
        android:layout_width="0dp"
        android:layout_height="30dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center|start"
        android:hint="İsim"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkSelectedContact"
        app:layout_constraintTop_toTopOf="@+id/checkSelectedContact" />

    <TextView
        android:id="@+id/txtContactPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center|start"
        android:hint="Telefon Numarası"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkSelectedContact"
        app:layout_constraintEnd_toEndOf="@+id/txtContactName"
        app:layout_constraintStart_toStartOf="@+id/txtContactName"
        app:layout_constraintTop_toBottomOf="@+id/txtContactName" />

    <CheckBox
        android:id="@+id/checkSelectedContact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>